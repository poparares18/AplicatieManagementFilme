<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplicatiemanagementfilme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_monkey_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_monkey_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicatieManagementFilme">
        <activity android:name=".WatchListDetailsActivity"></activity>
        <activity android:name=".MovieDetailsActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignUpActivity" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".LogInActivity" android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>